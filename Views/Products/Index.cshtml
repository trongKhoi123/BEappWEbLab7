@model IEnumerable<BeWebApp.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách sản phẩm</h2>


<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.ProductId)*@
            Mã hàng hóa
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.NamePro)*@
            Tên hàng hóa
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Price)*@
            Đơn giá
        </th>
        <th>
            @*@Html.DisplayFor(model => model.ImagePro)*@
            Hình ảnh

        </th>
        <th>
            @*@Html.DisplayFor(model => model.DecriptionPro)*@
           Mô tả

        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Category1.NameCate)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProductID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NamePro)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @*@Html.DisplayFor(modelItem => item.ImagePro)*@
        <img src="@Url.Content(item.ImagePro)" width="100" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DecriptionPro)
    </td>
    <td>
        @Html.ActionLink("sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-default btn-sm" }) |
        @Html.ActionLink("Xem chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-default btn-sm" }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-default btn-sm" })
    </td>
</tr>
    }

</table>
<p>
    @Html.ActionLink("Thêm mới sản phẩm", "UploadProduct", null, new { @class = "btn btn-default" })
</p>

